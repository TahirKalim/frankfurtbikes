<%= form_with(model: product, local: true,) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="col-sm-2 col-md-6">
  <div class="field form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", id: :product_name %>
  </div>

  <div class="field form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", id: :product_description %>
  </div>

  <div class="field form-group">
    <%= form.label :colour %>
    <%= form.text_field :colour, class: "form-control", id: :product_colour %>
  </div>

  <div class="field form-group">
    <%= form.label :price %>
    <%= form.text_field :price, class: "form-control", id: :product_price %>
  </div>

  <div class="field form-group">
    <%= form.label :image_url %>
    <%= form.text_field :image_url, class: "form-control", id: :product_image_url %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
</div>
<% end %>
